{
  "name": "ts-tiny-reflect-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @ondeoma/ts-tiny-reflect",
    "test": "npm run test -w @ondeoma/ts-tiny-reflect",
    "test:watch": "npm run test:watch -w @ondeoma/ts-tiny-reflect",
    "prepare:test-source": "npm run prepare -w test-source",
    "build:test-source": "npm run build -w test-source",
    "eslint": "eslint",
    "eslint:fix": "eslint --fix",
    "prettier": "npm run prettier --workspaces",
    "prettier:fix": "npm run prettier:fix --workspaces",
    "release": "changeset publish"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.16"
  }
}
